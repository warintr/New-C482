<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="InventoryManagementSystem" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.InventoryManagerController">
    <children>
        <Button fx:id="exitButton" layoutX="954.0" layoutY="317.0" mnemonicParsing="false" onAction="#exitProgram"
                text="Exit"/>
        <Pane layoutX="35.0" layoutY="100.0" prefHeight="200.0" prefWidth="400.0">
            <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2197ff00" height="200.0" layoutX="1.0" stroke="BLACK"
                           strokeLineCap="BUTT" strokeType="OUTSIDE" width="400.0"/>
                <TextField fx:id="searchInventoryPart" layoutX="237.0" layoutY="14.0" onKeyTyped="#searchPart"
                           promptText="Search by PartID or Name"/>
                <TableView fx:id="tableParts" layoutX="7.0" layoutY="41.0" prefHeight="116.0" prefWidth="387.0">
                    <columns>
                        <TableColumn fx:id="colPartId" editable="false" prefWidth="90.0" text="Part ID"/>
                        <TableColumn fx:id="colPartName" editable="false" prefWidth="90.0" text="Part Name"/>
                        <TableColumn fx:id="colPartInventory" editable="false" prefWidth="90.0" text="Inventory Level"/>
                        <TableColumn fx:id="colPartPrice" editable="false" prefWidth="90.0" text="Price/Cost per Unit"/>
                    </columns>
                </TableView>
                <ButtonBar layoutX="129.0" layoutY="157.0" prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="addPart" mnemonicParsing="false" onAction="#goToAddPart" text="Add"/>
                        <Button fx:id="modifyPart" mnemonicParsing="false" onAction="#goToModifyPart" text="Modify"/>
                        <Button fx:id="deletePart" mnemonicParsing="false" onAction="#deleteSelectedPart"
                                text="Delete"/>
                    </buttons>
                </ButtonBar>
                <Label layoutX="14.0" layoutY="18.0" text="Parts">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="labelPartSearchResult" layoutX="141.0" layoutY="18.0" prefHeight="17.0" prefWidth="75.0"
                       textFill="RED"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Pane>
        <Label layoutX="35.0" layoutY="43.0" text="Inventory Management System">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Pane layoutX="606.0" layoutY="100.0" prefHeight="200.0" prefWidth="400.0">
            <children>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2197ff00" height="200.0" layoutX="1.0" stroke="BLACK"
                           strokeLineCap="BUTT" strokeType="OUTSIDE" width="400.0"/>
                <TextField layoutX="237.0" layoutY="14.0" fx:id="searchInventoryProduct" onKeyTyped="#searchProduct"
                           promptText="Search by PartID or Name"/>
                <TableView fx:id="tableProducts" layoutX="7.0" layoutY="41.0" prefHeight="116.0" prefWidth="387.0">
                    <columns>
                        <TableColumn fx:id="colProductId" editable="false" prefWidth="90.0" text="Product ID"/>
                        <TableColumn fx:id="colProductName" editable="false" prefWidth="90.0" text="Product Name"/>
                        <TableColumn fx:id="colProductInventory" editable="false" prefWidth="90.0"
                                     text="Inventory Level"/>
                        <TableColumn fx:id="colProductPrice" editable="false" prefWidth="90.0"
                                     text="Price/Cost per Unit"/>
                    </columns>
                </TableView>
                <ButtonBar layoutX="129.0" layoutY="157.0" prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="addProduct" mnemonicParsing="false" onAction="#goToAddProduct" text="Add"/>
                        <Button fx:id="modifyProduct" mnemonicParsing="false" onAction="#goToModifyProduct"
                                text="Modify"/>
                        <Button fx:id="deleteProduct" mnemonicParsing="false" onAction="#deleteSelectedProduct"
                                text="Delete"/>
                    </buttons>
                </ButtonBar>
                <Label layoutX="14.0" layoutY="18.0" text="Products">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="labelProductSearchResult" layoutX="147.0" layoutY="18.0" prefHeight="17.0" prefWidth="75.0"
                       textFill="RED"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Pane>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
</AnchorPane>
